<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= company.name %> - Company Profile</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <div class="header-actions">
        <a href="/" class="btn btn-secondary">‚Üê Generate Another</a>
      </div>
      <h1>üè¢ <%= company.name %></h1>
      <% if company.website %>
        <p class="subtitle">
          <a href="<%= company.website %>" target="_blank" rel="noopener"><%= company.website %></a>
        </p>
      <% end %>
    </header>

    <main>
      <div class="profile-meta">
        <p>Generated on <%= profile.generated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <p><strong><%= profile.sections.count %></strong> sections generated</p>
      </div>

      <% if profile.sections.empty? %>
        <div class="alert alert-warning">
          <strong>Warning:</strong> No profile sections were generated. Please try again.
        </div>
      <% else %>
        <div class="profile-sections">
          <% profile.sections.each do |section| %>
            <div class="card section-card" id="section-<%= section.prompt_file %>">
              <div class="section-header section-header-toggle" onclick="toggleSection('<%= section.prompt_file %>')">
                <h2><%= section.name %></h2>
                <div class="section-header-right">
                  <span class="section-badge"><%= section.prompt_file %></span>
                  <span class="section-toggle-icon" id="toggle-icon-<%= section.prompt_file %>">‚ñº</span>
                </div>
              </div>
              <div class="section-content" id="content-<%= section.prompt_file %>">
                <%= ProfileGenerator::Services::ContentFormatter.new.format(section.content) %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="actions">
        <button onclick="toggleAllSections()" class="btn btn-secondary">üìÇ Toggle All Sections</button>
        <button onclick="window.print()" class="btn btn-primary">üñ®Ô∏è Print Profile</button>
        <button onclick="copyToClipboard()" class="btn btn-secondary">üìã Copy to Clipboard</button>
      </div>
    </main>

    <footer>
      <p>Powered by Claude (Sonnet 4) | Built with Ruby & Sinatra</p>
    </footer>
  </div>

  <script>
    function toggleSection(sectionName) {
      const content = document.getElementById(`content-${sectionName}`);
      const icon = document.getElementById(`toggle-icon-${sectionName}`);
      
      if (content.style.display === 'none') {
        content.style.display = 'block';
        icon.textContent = '‚ñº';
        icon.classList.remove('collapsed');
      } else {
        content.style.display = 'none';
        icon.textContent = '‚ñ∂';
        icon.classList.add('collapsed');
      }
    }

    function toggleAllSections() {
      const allContents = document.querySelectorAll('.section-content');
      const allIcons = document.querySelectorAll('.section-toggle-icon');
      const anyExpanded = Array.from(allContents).some(content => content.style.display !== 'none');
      
      allContents.forEach(content => {
        content.style.display = anyExpanded ? 'none' : 'block';
      });
      
      allIcons.forEach(icon => {
        icon.textContent = anyExpanded ? '‚ñ∂' : '‚ñº';
        if (anyExpanded) {
          icon.classList.add('collapsed');
        } else {
          icon.classList.remove('collapsed');
        }
      });
    }

    function copyToClipboard() {
      const sections = document.querySelectorAll('.section-card');
      let text = '<%= company.name %> - Company Profile\n\n';
      
      sections.forEach(section => {
        const title = section.querySelector('h2').textContent;
        const content = section.querySelector('.section-content').textContent.trim();
        text += `${title}\n${'='.repeat(title.length)}\n${content}\n\n`;
      });
      
      navigator.clipboard.writeText(text).then(() => {
        alert('Profile copied to clipboard!');
      }).catch(err => {
        console.error('Failed to copy:', err);
        alert('Failed to copy to clipboard');
      });
    }
  </script>
</body>
</html>
